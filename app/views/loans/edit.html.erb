<h1>Edit loan info</h1>
<div>
<%= form_for @loan do |f|%>
<% if @loan.errors.any? %>
    <h2>Errors:</h2>
      <ul>
       <% @loan.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %> 
     </ul>
   <% end %>

  <%= f.label :category %><br>
  <%= f.text_field :category, class: "field"%><br>

  <%= f.label :amount %><br>
  <%= f.text_field :amount, class: "field"%><br>

  <%= f.submit 'update'%>
<% end %>
</div>